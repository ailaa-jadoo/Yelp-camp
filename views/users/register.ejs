    <div class="card mt-5 mb-5"
        style="box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;">
        <div class="row">
            <div class="col-lg-6 d-flex align-items-center justify-content-center">
                <img src="images/clay-banks-Ppz6b-YUDHw-unsplash.jpg" style="width: 100%;"
                    class="img-fluid" alt="...">
            </div>

            <div class="col-lg-6 mt-4 mb-4">
                <div class="container-fluid">
                    <h2 class="mb-3 d-flex justify-content-center">Login</h2>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" required autofocus>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" id="email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Register</button>
                        <a href="/login" class="btn btn-dark btn-block">Already a member? Login here</a>
                    </form>
                </div>
            </div>

        </div>
    </div>